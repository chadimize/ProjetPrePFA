{
  "info": {
    "name": "Doorstep API",
    "description": "Collection pour tester l'API de Doorstep",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Cr√©er un Admin",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Admin Doorstep\",\n  \"email\": \"admin@doorstep.com\",\n  \"password\": \"admin123\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/api/create-admin",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "create-admin"]
        }
      }
    },
    {
      "name": "Inscription Client",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Jean Dupont\",\n  \"email\": \"client@example.com\",\n  \"password\": \"password123\",\n  \"type\": \"client\",\n  \"phone\": \"0612345678\",\n  \"city\": \"Paris\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/api/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "register"]
        }
      }
    },
    {
      "name": "Inscription Prestataire",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Marie Martin\",\n  \"email\": \"prestataire@example.com\",\n  \"password\": \"password123\",\n  \"type\": \"prestataire\",\n  \"phone\": \"0612345678\",\n  \"city\": \"Lyon\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/api/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "register"]
        }
      }
    },
    {
      "name": "Connexion",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"client@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/api/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "login"]
        }
      }
    },
    {
      "name": "Lister Prestataires en Attente",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}",
            "description": "Token de l'admin"
          }
        ],
        "url": {
          "raw": "http://localhost:4000/api/pending-prestataires",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "pending-prestataires"]
        }
      }
    },
    {
      "name": "Approuver Prestataire",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}",
            "description": "Token de l'admin"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"approved\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/api/users/{{user_id}}/status",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "users", "{{user_id}}", "status"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "admin_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    }
  ]
}